<h1 class="text-3xl font-bold mb-4">My Cart</h1>

<% if @cart_items.any? %>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b">Product</th>
          <th class="py-2 px-4 border-b">Price</th>
          <th class="py-2 px-4 border-b">Quantity</th>
          <th class="py-2 px-4 border-b">Total</th>
          <th class="py-2 px-4 border-b"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |item| %>
          <% if item[:product] && item[:quantity] %>
            <tr class="bg-gray-100 border-b">
              <td class="py-2 px-4"><%= item[:product].name %></td>
              <td class="py-2 px-4"><%= number_to_currency(item[:product].price) %></td>
              <td class="py-2 px-4">
                <%= form_with url: cart_path, method: :patch, local: true, class: "flex items-center" do |form| %>
                  <%= hidden_field_tag :product_id, item[:product].id %>
                  <%= form.number_field :quantity, min: 1, value: item[:quantity], class: "border border-gray-300 rounded px-2 py-1 w-16" %>
                  <%= form.submit "Update", class: "ml-2 bg-blue-500 text-white px-4 py-1 rounded" %>
                <% end %>
              </td>
              <td class="py-2 px-4"><%= number_to_currency(item[:product].price * item[:quantity]) %></td>
              <td class="py-2 px-4">
                <%= button_to 'Remove', cart_path(product_id: item[:product].id), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-500 text-white px-4 py-1 rounded" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <p class="mt-4 text-xl">Total: <%= number_to_currency(@cart_items.sum { |item| item[:product] && item[:quantity] ? item[:product].price * item[:quantity] : 0 }) %></p>
  <%# <%= link_to 'Confirm Order', confirm_order_cart_path, class: "mt-4 bg-blue-500 text-white px-6 py-2 rounded" %>

<% else %>
  <p class="text-lg">Your cart is empty.</p>
  <pre><%= debug @cart_items %></pre>
<% end %>
